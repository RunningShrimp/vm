{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:8000",
    "distDir": "./"
  },
  "package": {
    "productName": "VM Manager",
    "version": "0.1.0"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VM Manager",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1000,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [],
    "identifier": "com.vmmanager.app"
  }
}
